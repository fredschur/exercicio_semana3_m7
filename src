  $product_description = htmlentities($_POST['DESCRIPTION']);
  $product_price = htmlentities($_POST['PRICE']);
  $product_category = htmlentities($_POST['CATEGORY']);

  if (strlen($product_name) || strlen($product_description) || strlen($product_price) || strlen($product_category)) {
    AddProduct($connection, $product_name, $product_description, $product_price, $product_category);
  }
?>

